---
layout: null
site_url: 'https://www.ericchrobak.com'
sitemap:
  changefreq: 'monthly'
  exclude: 'yes'
---

<?xml version="1.0" encoding="utf-8"?><!--Generated by Screaming Frog SEO Spider 11.3-->
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
{% for post in site.posts %}
    {% unless post.published == false %}
    <url>
      <loc>{{ page.site_url }}{{ post.url }}</loc>
      {% if post.sitemap.lastmod %}
        <lastmod>{{ post.sitemap.lastmod | date: "%Y-%m-%d" }}</lastmod>
      {% elsif post.date %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      {% if post.sitemap.changefreq %}
        <changefreq>{{ post.sitemap.changefreq }}</changefreq>
      {% else %}
        <changefreq>monthly</changefreq>
      {% endif %}
      {% if post.sitemap.priority %}
        <priority>{{ post.sitemap.priority }}</priority>
      {% else %}
        <priority>0.5</priority>
      {% endif %}
    </url>
    {% endunless %}
  {% endfor %}
  {% for one_page in site.pages %}
    {% unless one_page.sitemap.exclude == "yes" %}
    <url>
      <loc>{{ page.site_url }}{{ one_page.url | remove: "index.html" }}</loc>
      {% if one_page.sitemap.lastmod %}
        <lastmod>{{ one_page.sitemap.lastmod | date: "%Y-%m-%d" }}</lastmod>
      {% elsif page.date %}
        <lastmod>{{ one_page.date | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
      {% if one_page.sitemap.changefreq %}
        <changefreq>{{ one_page.sitemap.changefreq }}</changefreq>
      {% else %}
        <changefreq>monthly</changefreq>
      {% endif %}
      {% if one_page.sitemap.priority %}
        <priority>{{ one_page.sitemap.priority }}</priority>
      {% else %}
        <priority>0.3</priority>
      {% endif %}
    </url>
    {% endunless %}
  {% endfor %}
</urlset>
